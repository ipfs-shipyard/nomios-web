{
  "name": "nomios-web",
  "description": "Codebase for the web version of Nomios, a reference implementation of the IDM Wallet UI",
  "homepage": "https://github.com/ipfs-shipyard/nomios-web#readme",
  "author": "Pedro Santos <pedro.santos@moxy.studio>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ipfs-shipyard/nomios-web.git"
  },
  "keywords": [
    "nomios",
    "idm",
    "wallet",
    "www",
    "web",
    "decentralized",
    "identity"
  ],
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "exit 0",
    "lint": "eslint --ignore-path .gitignore . && stylelint --ignore-path .gitignore \"**/*.css\"",
    "prerelease": "npm t && npm run lint && npm run build",
    "release": "standard-version"
  },
  "dependencies": {
    "@nomios/web-uikit": "^0.0.0",
    "idm-wallet": "^0.0.0",
    "classnames": "^2.2.6",
    "lottie-react-web": "^2.1.4",
    "react-transition-group": "^2.6.1",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-scripts": "2.1.8"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^7.5.0",
    "@craco/craco": "^3.5.0",
    "babel-preset-moxy": "^3.0.5",
    "commitlint": "^7.5.2",
    "eslint-config-moxy": "^7.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "postcss-preset-moxy": "^4.0.1",
    "standard-version": "^5.0.1",
    "stylelint": "^9.10.1",
    "stylelint-config-moxy": "^5.0.0",
    "raw-loader": "^2.0.0",
    "svg-css-modules-loader": "^1.6.1",
    "svg-loader": "^2.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "standard-version": {
    "scripts": {
      "posttag": "git push --follow-tags origin master"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.css": [
      "stylelint --fix",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
